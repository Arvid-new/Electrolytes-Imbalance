<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activites.Calculator.Carbonate.HighP.HighBiCarbonate">

    <EditText
        android:id="@+id/plasmaCLID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="enter plasma Cl (mEq/L)"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <EditText
        android:id="@+id/bwID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="enter body weight (Kg)"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/plasmaCLID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/plasmaCLID"
        app:layout_constraintTop_toBottomOf="@+id/plasmaCLID"
        app:layout_constraintVertical_bias="0.106" />

    <Button
        android:id="@+id/calcuID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bwID"
        app:layout_constraintStart_toStartOf="@+id/bwID"
        app:layout_constraintTop_toBottomOf="@+id/bwID"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/resID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/calcuID"
        app:layout_constraintStart_toStartOf="@+id/calcuID"
        app:layout_constraintTop_toBottomOf="@+id/calcuID" />
</androidx.constraintlayout.widget.ConstraintLayout>
